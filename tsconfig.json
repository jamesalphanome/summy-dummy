{
  "compilerOptions": {
    // Target ES5 for wider browser compatibility
    "target": "es5",
    // Use ES modules for tree shaking
    "module": "esnext",
    // Include DOM types and latest ECMAScript features
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // React specific settings
    "jsx": "preserve",
    "isolatedModules": true,
    // Generate declaration files
    "declaration": true,
    "declarationDir": "dist",
    // Module resolution settings
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // Strict type checking
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    // Additional checks
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // Output settings
    "outDir": "dist",
    "sourceMap": true,
    // Path aliases (if needed)
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
    },
    "skipDefaultLibCheck": true
  },
  "include": [
    "src/**/*",
    "components/ui",
    "src/lib",
    "./src/types/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx"
  ]
}